{
  "name": "place-app",
  "version": "0.1.0",
  "description": "A playground for pixels",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightningrodlabs/place.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "start": "tsc && electron .",
    "dist": "cp ../dna/workdir/place.happ ./bin && electron-builder build",
    "dist-tar": "cp ../dna/workdir/place.happ ./bin && electron-builder --linux tar.gz",
    "dist-linux": "cp ../dna/workdir/place.happ ./bin && electron-builder --linux AppImage",
    "clean": "rm -rf node_modules && rm -rf package-lock.json"
  },
  "keywords": [
    "Electron",
    "Holochain"
  ],
  "author": "Harris-Braun Enterprises, LLC and contributors",
  "license": "CAL-1.0",
  "build": {
    "productName": "Place",
    "afterSign": "./afterSignHook.js",
    "appId": "org.lightningrodlab.place",
    "copyright": "Â© 2021-2022 Harris-Braun Enterprises, LLC",
    "asar": false,
    "files": [
      "dist/**/*",
      "web/**/*",
      "bin/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "web/logo",
      "output": "out"
    },
    "publish": {
      "provider": "github"
    }
  },
  "devDependencies": {
    "@types/split": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "electron": "17.1.1",
    "electron-builder": "22.14.13",
    "eslint": "^7.25.0",
    "eslint-plugin-import": "^2.22.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@lightningrodlabs/electron-holochain": "^0.3.0",
    "electron-prompt": "^1.7.0",
    "electron-log": "^4.4.6",
    "electron-notarize": "^1.1.1",
    "split": "^1.0.1"
  }
}
