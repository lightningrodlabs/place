{
  "name": "place-app",
  "version": "0.2.0-hc-beta.1.0",
  "description": "A playground for pixels",
  "author": "Harris-Braun Enterprises, LLC and contributors",
  "license": "CAL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightningrodlabs/place.git"
  },
  "main": "out-tsc/index.js",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "start": "electron .",
    "dist:build": "electron-builder build",
    "dist-tar": "electron-builder --linux tar.gz",
    "dist-linux": "electron-builder --linux AppImage"
  },
  "keywords": [
    "Electron",
    "Holochain"
  ],
  "build": {
    "productName": "Place",
    "afterSign": "./afterSignHook.js",
    "appId": "org.lightningrodlab.place",
    "copyright": "Â© 2021-2023 Harris-Braun Enterprises, LLC",
    "asar": false,
    "files": [
      "out-tsc/**/*",
      "web/**/*",
      "bin/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "web/logo",
      "output": "out-builder"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "publish": {
      "provider": "github",
      "releaseType": "prerelease",
      "publishAutoUpdate": true
    }
  },
  "devDependencies": {
    "@types/split": "^1.0.0",
    "@types/electron-prompt": "^1.6.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "electron": "19.0.0",
    "electron-builder": "22.14.13",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.22.1",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@lightningrodlabs/electron-holochain": "^0.6.1",
    "electron-prompt": "^1.7.0",
    "electron-log": "^4.4.6",
    "command-exists": "^1.2.8",
    "electron-notarize": "^1.1.1",
    "electron-osx-sign": "^0.4.14",
    "fix-path": "^2.1.0",
    "lint": "^0.7.0",
    "tslib": "^2.3.1",
    "split": "^1.0.1",
    "ws": "^8.5.0"
  }
}
