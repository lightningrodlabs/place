{
  "name": "we-applet",
  "version": "0.2.0",
  "scripts": {
    "tsc"         :  "tsc",
    "build"       :  "rm -rf dist && tsc && rollup --config rollup.config.js",
    "build:watch" :  "tsc -w --preserveWatchOutput",
    "devtest"     :  "npm run clean:hc & npm run build && cross-env HC_APP_PORT=$(port) HC_ADMIN_PORT=$(port) BUILD_MODE='dev' concurrently \"npm run new-sandbox\" \"npm run start:ui\"",
    "new-sandbox" :  "RUST_LOG=warn WASM_LOG=debug  echo \"pass\" | ../$npm_package_config_bin/hc s --piped -f=$HC_ADMIN_PORT generate ../artifacts/place.happ --run=$HC_APP_PORT -a place-applet network mem",
    "start:ui"    :  "concurrently -k --names tsc,dev-server \"npm run build:watch\" \"wds --config ./web-dev-server.config.mjs\"",
    "clean:hc"    :  "rm -rf .hc*"

  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@web/dev-server": "^0.1.21",
    "@web/dev-server-rollup": "^0.3.10",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "bestzip": "^2.2.0",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "new-port-cli": "^1.0.0",
    "rollup": "^2.56.2",
    "rollup-plugin-copy": "^3.4.0"
  },
  "dependencies": {
    "@lightningrodlabs/we-applet": "0.8.0",
    "place": "file:../webapp",
    "@place/elements": "file:../webcomponents"
  },
  "private": true
}
